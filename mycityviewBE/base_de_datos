CREATE TABLE mycityviewdb.t (c CHAR(20) CHARACTER SET utf8 COLLATE utf8_bin);
insert into mycityviewdb.t (c) value ('a');
insert into mycityviewdb.t (c) value ('b');
select * from mycityviewdb.t;
delete from mycityviewdb.t where c='b';

drop table mycityviewdb.t;